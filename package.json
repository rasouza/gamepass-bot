{
  "name": "gamepass-bot",
  "version": "2.1.1",
  "main": "bot.js",
  "author": "R. A. Souza",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "node dist/bin/bot.js",
    "sync": "node dist/bin/sync.js",
    "console": "node -r dotenv/config dist/bin/console.js",
    "build": "tsc",
    "get-version": "echo $npm_package_version"
  },
  "dependencies": {
    "@sentry/node": "^6.8.0",
    "@sentry/tracing": "^6.8.0",
    "@supabase/supabase-js": "^1.18.1",
    "axios": "^0.21.1",
    "discord.js": "^12.5.3",
    "filesize": "^6.4.0",
    "immutable": "^4.0.0-rc.14",
    "lodash": "^4.17.21",
    "logdna-winston": "^3.0.5",
    "winston": "^3.3.3",
    "winston-dev-format": "^0.2.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "semantic-release": "^17.4.4",
    "standard": "^16.0.3",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rasouza/gamepass-bot.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
